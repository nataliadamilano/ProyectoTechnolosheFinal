@model Proyecto.Models.Artista

@{
    ViewBag.Title = "Editar Artista";
}

<div class="container-fluid">
    <div class="row baja2">
        <div class="col-12">
            <h3>Editar: @Model.nvarchNombre</h3>
        </div>
        <div class="col-12">
       @using (Html.BeginForm("Edit", "Artista", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)
            <div class="form-group">
               <div class="col-md-10 pb-2">
                @if (Model.varbImagen != null)
                {
                    <div>
                        <img style="width:200px;" src="@Url.Action("GetImage", "Artista", new { artistaID = Model.ID })" />
                    </div>
                }
                </div>
                <div class="col-md-10">
                    <input type="file" name="Image">
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.nvarchNombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nvarchNombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nvarchNombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.nvarchPais, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nvarchPais, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nvarchPais, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.intAño, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.intAño, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.intAño, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IDGenero, "Género", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("IDGenero", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDGenero, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.nvarchBiografia, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nvarchBiografia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nvarchBiografia, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="button-gnrl" />
                    @Html.ActionLink("Volver", "Details", new { controller = "Artista", id = Model.ID }, new { @class = "button-gnrl" })
                </div>
            </div>
            </div>
        }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
