@model Proyecto.Models.Artista

@{
    ViewBag.Title = "Agregar Artista";
}

<div class="container-fluid">
    <div class="row baja3">
        <div class="col-12 p-0">
        <h2>Agregar Artista</h2>
        </div>
    <div class="col-12 p-0 pl-5 pr-5">
<!-- Paso un método Post por el formulario para que cargue los datos y el enctype permite que se envíen archivos a través del form -->
        @using (Html.BeginForm("Create", "Artista", FormMethod.Post, new { enctype = "multipart/form-data" }))
         {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.varbImagen, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-xs-12 pl-2 pr-2">
                    <input type="file" name="Image">
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.nvarchNombre, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-xs-12 pl-2 pr-2">
                    @Html.EditorFor(model => model.nvarchNombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nvarchNombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.nvarchPais, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-xs-12 pl-2 pr-2">
                    @Html.EditorFor(model => model.nvarchPais, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nvarchPais, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.intAño, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-xs-12 pl-2 pr-2">
                    @Html.EditorFor(model => model.intAño, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.intAño, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IDGenero, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-xs-12 pl-2 pr-2">
                    @Html.DropDownList("IDGenero", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.IDGenero, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.nvarchBiografia, htmlAttributes: new { @class = "control-label col-md-12" })
                <div class="col-xs-12 pl-2 pr-2">
                    @Html.EditorFor(model => model.nvarchBiografia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nvarchBiografia, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12 p-0 pb-5 pl-2">
                    <input type="submit" value="Agregar" class="button-gnrl" />
                        @Html.ActionLink("Volver a Artistas", "Index", new { controller = "Artista" }, new { @class = "button-gnrl" })
                </div>
            </div>
            </div>
         }
    </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
