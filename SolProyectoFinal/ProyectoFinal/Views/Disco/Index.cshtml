@model IEnumerable<ProyectoFinal.Models.Disco>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.varbPortada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.varchNombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.intAño)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IDArtista)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @if (item.varbPortada != null)
        {
            <div class="photo-display">
                <img class="photo-display-img" src="@Url.Action("GetImage", "Disco", new { discoID = item.ID })" />
            </div>
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.varchNombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.intAño)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IDArtista)
    </td>

    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
